<% title "Article" %>

<p>
  <strong>Name:</strong>
  <%= @article.name %>
</p>
<p>
  <strong>Content:</strong>
  <%= @article.content %>
</p>
<p>
  <strong>Tags:</strong>
  <%= @article.tags.join(", ") %>
</p>

<p>
  <%= link_to "Edit", edit_article_path(@article) %> |
  <%= link_to "Destroy", @article, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", articles_path %>
</p>
